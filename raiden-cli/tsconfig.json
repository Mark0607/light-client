{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "typeRoots": [
      "./node_modules/@types",
      "../raiden-ts/typings",
      "../raiden-ts/node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["../raiden-ts/node_modules/*", "node_modules/@types/*", "node_modules/*", "*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
